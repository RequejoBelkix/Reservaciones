
@{
    ViewBag.Title = "Recuperar_Contraseña";
}



<h2>Modelo de Recuperacion de Contraseña</h2>
@using (Html.BeginForm())
{
    <div class=" form-horizontal">
        <hr />
        <div class="text-success">
            @ViewBag.Message
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Correo Electronico</label>
            @Html.TextBox("EmailID", "", new { @class = "form--control" })
        </div>
        <div class="form-group">
            <div class="ccl-md-offset-2 col-md-10">
                <input type="submit" value="Mandar Correo" class="btn btn-success" />
            </div>
        </div>
        <div>
            @Html.ActionLink("Cambiar contraseña", "ActualizarContraseña")
        </div>
        <div>
            @Html.ActionLink("Regresar", "Recuperacion")
        </div>
    </div>

}

